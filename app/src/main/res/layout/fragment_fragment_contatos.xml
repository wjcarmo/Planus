<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:background="@color/colorAccent2"
    android:padding="6dip" >
    <ListView
        android:id="@+id/lv_Contatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

    <ImageView
        android:id="@+id/MostraFotoDoContato"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        />

    <TextView
        android:id="@+id/MostraEmailDoContato"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/MostraFotoDoContato"
        android:textColor="@color/corAmarelo"
        android:ellipsize="marquee"
        android:textSize="12sp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/MostraNomeDoContatos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/MostraEmailDoContato"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/MostraFotoDoContato"
        android:textColor="@color/corAmarelo"
        android:gravity="center_vertical"
        android:textSize="16sp" />


</RelativeLayout>