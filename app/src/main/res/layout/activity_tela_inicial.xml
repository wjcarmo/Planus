<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela_inicial"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/corAmarelo"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgTelaInicial"
            android:layout_width="match_parent"
            android:layout_height="217dp"
            android:background="@color/corBranca"
            android:scaleType="fitCenter"
            android:src="@drawable/logocabecalhodetela" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:background="@color/colorAccent2"
        android:orientation="vertical"
        android:padding="@dimen/text_size">

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:background="@drawable/campospadronizados"
            android:drawableLeft="@drawable/ic_action_user"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColor="@color/corBalaoChumbo" />

        <EditText
            android:id="@+id/txtCadSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtEmail"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:background="@drawable/campospadronizados"
            android:drawableLeft="@drawable/ic_senha"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textColor="@color/corBalaoChumbo"
            android:textSize="@dimen/FontePadrao" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/laytout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/corBranca"
        android:orientation="vertical"
        android:padding="@dimen/nav_header_vertical_spacing">


        <Button
            android:id="@+id/btnEntrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtCadastrarAqui"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:layout_weight="1"
            android:background="@drawable/botoespadronizados"
            android:padding="@dimen/activity_vertical_margin"
            android:text="Entrar"
            android:textColor="@color/corAmarelo"
            android:textSize="@dimen/botoes"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/txtCadastrarAqui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="abrirCadastroDeUsurios"
            android:padding="@dimen/text_size"
            android:text="Cadastre Aqui"
            android:textAlignment="center"
            android:textColor="@color/corAmarelo"
            android:textSize="@dimen/FontePadrao"
            android:textStyle="normal|bold" />
    </LinearLayout>


</LinearLayout>
