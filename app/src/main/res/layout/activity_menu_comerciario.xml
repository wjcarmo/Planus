<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_menu_central"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corFundoDeTela"
    android:orientation="vertical">
    <include
        android:id="@+id/toolbar_principal"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/layout001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/btnComerciario"
            android:layout_width="@dimen/cartaoLargura"
            android:layout_height="@dimen/cartaoAltura"
            android:layout_margin="10dp"
            android:clickable="true"
             android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
                android:id="@+id/btnCardComerciario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_shadow_start_color"
                android:clickable="true"
                android:contextClickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5sp">

                <ImageView
                    android:id="@+id/BtnComerciario"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/balaoamarelo"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:src="@drawable/ic_videocam_black_24dp" />

                <TextView

                    android:id="@+id/txtComerciario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:text="On Line"
                    android:textColor="@color/corBalaoAmarelo"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/cardview_light_background" />/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/cartaoLargura"
            android:layout_height="@dimen/cartaoAltura"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_shadow_start_color"
                android:contextClickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5sp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/balaoamarelo"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:src="@drawable/ic_directions_run_black_24dp" />

                <TextView
                    android:id="@+id/TxtServicosPublicos2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:text="Furto"
                    android:textColor="@color/corBalaoAmarelo"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/cardview_light_background" />
                />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/cartaoLargura"
            android:layout_height="@dimen/cartaoAltura"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_shadow_start_color"
                android:contextClickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5sp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/balaoamarelo"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:src="@drawable/images3" />

                <TextView
                    android:id="@+id/TxtServicosPublicos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:text="Roubo"
                    android:textColor="@color/corBalaoAmarelo"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/cardview_light_background" />
                />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout002"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/btnOcorrencia"
            android:layout_width="@dimen/cartaoLargura"
            android:layout_height="@dimen/cartaoAltura"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:id="@+id/lnyCardOcorrencia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_shadow_start_color"
                android:clickable="true"
                android:contextClickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5sp">

                <ImageView
                    android:id="@+id/BtnImgOcorrencia"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/balaoamarelo"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:src="@drawable/ladraoum" />

                <TextView
                    android:id="@+id/txtOcorrencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:text="Ocorrência"
                    android:textColor="@color/corBalaoAmarelo"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/cardview_light_background" />/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/cartaoLargura"
            android:layout_height="@dimen/cartaoAltura"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_shadow_start_color"
                android:contextClickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5sp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/balaoamarelo"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:src="@drawable/ic_forward_5_black_24dp" />

                <TextView
                    android:id="@+id/Txtcerco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:text="Cerco "
                    android:textColor="@color/corBalaoAmarelo"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/cardview_light_background" />
                />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/cartaoLargura"
            android:layout_height="@dimen/cartaoAltura"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_shadow_start_color"
                android:contextClickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5sp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/balaoamarelo"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:src="@drawable/guarda" />

                <TextView
                    android:id="@+id/TxtFiscalizacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:text="Fiscalização"
                    android:textColor="@color/corBalaoAmarelo"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/cardview_light_background" />
                />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout003"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/btnTransito"
            android:layout_width="@dimen/cartaoLargura"
            android:layout_height="@dimen/cartaoAltura"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:id="@+id/lnyCardTransito"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_shadow_start_color"
                android:clickable="true"
                android:contextClickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5sp">

                <ImageView
                    android:id="@+id/BtnImgTransito"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/balaoamarelo"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:src="@drawable/baseline_traffic_black_18dp" />

                <TextView
                    android:id="@+id/txtTransito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:text="Trânsito"
                    android:textColor="@color/corBalaoAmarelo"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/cardview_light_background" />/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/cartaoLargura"
            android:layout_height="@dimen/cartaoAltura"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_shadow_start_color"
                android:contextClickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5sp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/balaoamarelo"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:src="@drawable/ic_local_hospital" />

                <TextView
                    android:id="@+id/TxtAmbulancia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:text="Ambulância "
                    android:textColor="@color/corBalaoAmarelo"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/cardview_light_background" />
                />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/cartaoLargura"
            android:layout_height="@dimen/cartaoAltura"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_shadow_start_color"
                android:contextClickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5sp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/balaoamarelo"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:src="@drawable/ic_invasao" />

                <TextView
                    android:id="@+id/TxtFortuito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:text="Fortuito"
                    android:textColor="@color/corBalaoAmarelo"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/cardview_light_background" />
                />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>




</LinearLayout>

