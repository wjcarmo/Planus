<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_validador"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     tools:context="seguranca.mas.planus.Activity.MainActivity">

    <include
        android:id="@+id/toolbar_principal"
        layout="@layout/toolbar"/>

    <seguranca.mas.planus.help.SlidingTabLayout
        android:id="@+id/stl_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/corAmarelo"

        />
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_Pagina"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />



</LinearLayout>
