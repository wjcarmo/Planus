<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corFundoDeTela"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/layoutBotoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar">

        <TextView
            android:id="@+id/textSemInternet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/corFundoDeBotoes"
            android:padding="@dimen/CamposPadrao"
            android:text="@string/SemInternet"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/botoes" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imagenSemInternet"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@+id/layoutBotoes"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/seminternet"
        tools:ignore="NotSibling" />


</RelativeLayout>
