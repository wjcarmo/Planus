<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:showIn="@layout/app_bar_menu_principal_lateral"
    tools:context="seguranca.mas.planus.planusmasseguranca.MenuPrincipalLateral">


    <include
        android:id="@+id/toolbar_principal"
        layout="@layout/toolbar"/>

    <seguranca.mas.planus.help.SlidingTabLayout
        android:id="@+id/stl_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/corAmarelo"

        />
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_Pagina"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
