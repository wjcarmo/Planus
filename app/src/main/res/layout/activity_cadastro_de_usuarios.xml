<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corFundoDeBotoes"
    android:gravity="left|right|center"
    tools:context="seguranca.mas.planus.Activity.CadastroDeUsuariosActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="216dp"
            android:background="@color/corBranca"
            app:srcCompat="@drawable/logocabecalhodetela" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent2"
        android:orientation="vertical"
        android:paddingTop="25dp">

        <EditText
            android:id="@+id/txtCadNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o Nome"
            android:inputType="textPersonName"
            android:padding="@dimen/activity_vertical_margin"
            android:textColor="@color/corBranca"
            android:textColorHint="@color/corBalaoBronze"
            android:textSize="@dimen/FontePadrao" />

        <EditText
            android:id="@+id/txtCadEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite um E-mail vÃ¡lido"
            android:inputType="textEmailAddress"
            android:padding="@dimen/activity_vertical_margin"
            android:textColor="@color/corBranca"
            android:textColorHint="@color/corBalaoBronze"
            android:textSize="@dimen/FontePadrao" />

        <EditText
            android:id="@+id/txtCadSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite uma senha"
            android:inputType="textPassword"
            android:padding="@dimen/activity_vertical_margin"
            android:textColor="@color/corBranca"
            android:textColorHint="@color/corBalaoBronze"
            android:textSize="@dimen/FontePadrao" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/corBranca"
        android:orientation="vertical"
        android:paddingTop="25dp">

        <Button
            android:id="@+id/btnCadastraAqui"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/botoespadronizados"
            android:padding="@dimen/activity_vertical_margin"
            android:text="Cadastrar"
            android:textColor="@color/corAmarelo"
            android:textSize="@dimen/botoes"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
