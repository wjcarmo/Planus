<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CadOcorrencias"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corFundoDeTela"
    android:orientation="vertical"
    tools:context="seguranca.mas.planus.Fragments.FragmentDeContatos">
    <ListView
        android:id="@+id/lv_Ocorrencias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/MostraIconeDeGuarda"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        />

    <TextView
        android:id="@+id/MostraTipodDoRoubo"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/MostraFotoDoContato"
        android:textColor="@color/corAmarelo"
        android:ellipsize="marquee"
        android:textSize="12sp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/MostraStatusDoRoubo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/MostraEmailDoContato"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/MostraFotoDoContato"
        android:textColor="@color/corAmarelo"
        android:gravity="center_vertical"
        android:textSize="16sp" />

</RelativeLayout>
